<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dialog_background"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_button_text_size"
                android:gravity="center"
                android:text="Please confirm to continue"/>

            <TextView
                android:id="@+id/textMaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="20dp"
                android:textSize="@dimen/menu_button_text_size"
                android:text="1+1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageNegative"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/negative_green"/>

                <TextView
                    android:id="@+id/textSolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/menu_button_text_size"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/imagePositive"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:src="@drawable/positive_green"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/tick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/tick_green"/>
</RelativeLayout>
